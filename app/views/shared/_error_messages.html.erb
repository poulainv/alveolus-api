
<% if @webapp.errors.any? %>
  <div class="alert alert-error">
    <h3><%= pluralize(@webapp.errors.count, "erreur") %>
      ont empêché d'enregistrer votre app</h3>
    <p>Merci de corriger ces champs :</p>
    <ul>
      <% @webapp.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>