<%#
## Website preview for display on home
%>

<div class="thumbnail">
  <%= image_tag(website.photo.url(:small),:class =>"img-rounded", :alt => "rss feed") %>
  <div class="row-fluid">
    <div class="span5">
      <strong> <%= link_to website.title, website %></strong>
    </div>
    <div class="span5 offset2">
      <%=  render :partial => "layouts/star_rating", :locals => { :n => website.average_rate }%>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= website.caption %>
    </div>
  </div>
</div>
