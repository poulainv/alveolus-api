<%#
## Website preview for display on home
%>

<div class="thumbnail">
 
  <%= image_tag(website.photo.url(:small), :class =>"img-rounded", :alt => "rss feed") %>
  <div class="row-fluid">
    <div class="span5">
      <strong><a class="websiteTitle" websiteId="<%= website.id %>" href="#detailWebsiteModal" data-toggle="modal"><%= website.title %></a>
</strong>
    </div>
    <div class="span5 offset2">
      <%=  render :partial => "shared/star_rating", :locals => { :n => website.average_rate }%>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <small> <%= tronc_caption website.caption %> </small>
    </div>
  </div>
</div>
