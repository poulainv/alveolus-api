<!-- View for display website by list for example for a search or to display all order websites -->

<div class="row-fluid">
  <div class="span10">
    <ul class="nav nav-pills" style="cursor:pointer">
      <li><a id="btn_sort_recent" data-toggle="tab">Nouveautés</a></li>
      <li><a id="btn_sort_suggested" data-toggle="tab">Sélection</a></li>
      <li><a id="btn_sort_commented" data-toggle="tab">Les plus commentés</a></li>
      <li><a id="btn_sort_rated" data-toggle="tab">Les mieux notés</a></li>
      <li><a id="btn_sort_trend" data-toggle="tab">Les plus consultés</a></li>
      <li><a id="btn_sort_random" data-toggle="tab">Aléatoire</a></li>
    </ul>
  </div>
  <div class=" span2">
    <div class="btn-group">
      <button type="button" id="btn_display_grid" class="btn"><i class="icon-th"></i></button>
      <button type="button" id="btn_display_list" class="btn"><i class="icon-th-list"></i></button>
    </div>
  </div>

</div>
 <div class="line-separator" style="margin-top:-1%;"></div>

<div class="row-fluid">
  <div class="span12">
    <div class="heading">
      <h2><a id="subtitle_search" href="/webapps/order/recent/true"><%=@subtitle%></a></h2>
      </div>
  </div>

</div>

<div class="row-fluid">

  <div id="search_result" class="websites">
    <% if @webapps.length != 0 %>
    <%=  render :partial => "webapps/preview_website_large_grid", :collection => @webapps, :as => :website %>
  <% else %>
    <p>Aucun résultat retourné...</p>
    <%end%>
  </div>
</div>