
<!-- Modal -->
<div id="website-modal" class="modal hide" tabindex="-1" role="dialog" data-title="<%=@webapp.title%>" data-url="<%=@webapp.url%>" data-caption="<%=@webapp.caption%>"  aria-hidden="true">

  <div class="modal-header">
    <!-- Header for the popup detail -->
    <div class="row-fluid">
      <div class="span4">
        <% if @webapp.facebook_id.blank? %>
          <% url_image =  "http://www.google.com/s2/favicons?domain#{@webapp.url.slice(7,@webapp.url.length-8)}"
          size=20%>
        <% else  %>
          <% url_image = "https://graph.facebook.com/#{@webapp.facebook_id}/picture"
          size=30%>
        <% end %>
        <img style="border-style:solid;" width="<%=size%>"  src="<%=url_image%>" class="custom_inline" style="margin-bottom:7%;" alt="none" src=""></img>

        <h3 class="custom_inline" style="margin-left:6%;margin-bottom:-10%;" ><%= @webapp.title %></h3>
      </div>
      <div class="span3" style="margin-top:0.8%">
           <div class="icon-ok-sign"></div> <%= link_to  @webapp.url, @webapp.url ,:class=>"websiteurl", :target=>"_blank", :id=>"detailWebsiteModalURL" %>
      </div>
      
      <div class="offset1 span2">
        <img class="custom_inline" id="share_facebook" style="cursor:pointer;"  src="/img/facebook_32.png"></img>
        <img class="custom_inline" id="share_google" style="cursor:pointer;"  src="/img/google_plus_32.png"></img>
        <img class="custom_inline" id="share_twitter" style="cursor:pointer;" src="/img/twitter_32.png"></img>
       
      </div>
      <div class="span1">
         <% if user_signed_in?
          if bookmarked?(current_user,@webapp)%>
            <img class="custom_inline" id="bookmark" style="cursor:pointer; " src="/img/star-on-big.png"></img>
          <%else%>
            <img class="custom_inline" id="bookmark" style="cursor:pointer; " src="/img/star-off-big.png"></img>
          <%end
        end%>
            
      </div>
      <div class="span1">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      </div>
    </div>
  </div>




  <div class="modal-body"  style="overflow:hidden">
    <!-- Body for the popup detail -->
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
          <h5><i class=" icon-heart" style="margin-top:1%;" ></i>   Réseaux sociaux</h5>
          <div class="row-fluid">
            <img src="/img/fb-thumb.png" width="20"></img>  <span  id="nb-fb-like" data-facebook-id="<%=@webapp.facebook_id%>">Oops</span>
          </div>
          <div class="row-fluid">
            <img src="/img/twitter-bird.png" width="35" style="margin-left:-6%;"></img><em>Bientôt...</em><span  id="nb-twitter-follow" data-twitter-id="<%=@webapp.twitter_id%>"></span>
          </div>
          <div class="row-fluid">
            <img src="/img/gplus-red.png" width="20" ></img> <em> Bientôt...</em><span  id="nb-gplus-like" data-gplus-id="<%=@webapp.gplus_id%>"></span>
          </div>
          <div class="row-fluid" style="margin-top:6%;margin-bottom:6%;">
            <div class="line-separator-dashed"></div></div>
          <h5><i class=" icon-signal" style="margin-top:1%;" ></i>  Statistiques</h5>
              <div class="row-fluid">
             <span class="custom_inline"> <i class="icon icon-comment" title="Nombre de commentaires"></i> <%= @webapp.comments.length%>  <i class="icon icon-bookmark" title="Nombre de fois ajoutés en favoris"></i> <%= @webapp.nb_click_shared%></span>
          </div>
      
          <div class="row-fluid">
            <span class="custom_inline">  <%=  render :partial => "shared/star_rating", :locals => { :n => @webapp.average_rate }%>  </span>
            <span class="custom_inline badge badge-info"> <%= @webapp.average_rate.to_s.slice(0,3)%></span>
          </div>

          <div class="row-fluid" style="margin-top:6%;margin-bottom:6%;">
            <div class="line-separator-dashed"></div></div>

          <h5>  <span class="icon-tags" style="margin-top:2%;"></span> Tags  </h5>
          <%=  render :partial => "tags/show", :collection => @webapp.best_tags, :as => :tag %>
          <% if user_signed_in? %>
            <button id="addTagButton" class="btn btn-link btn-small" href="#"><i class="icon-plus-sign"></i> Proposer un tag </button>
            <div id="addTagField" class="input-append">
              <input class="span9" id="newTagField" type="text"></input>
              <a class="btn" id="addTagSendButton" type="button">Add!</a>
            </div>
            <p class="alert alert-success" id="messageTagSaved"> C'est noté ! </p>
          <%else%>
            <%=render "shared/message_please_sign_in"%>
          <%end%>
        </div>

        <div class="span10">
          <ul id="detailPopupTab" class="nav nav-tabs custom_tab">
            <li class="active"><a href="#detailTab" data-toggle="tab">Détails</a></li>
            <li><a href="#commentTab" data-toggle="tab">Avis des internautes</a></li>
            <% if !@webapp.vimeo_id.blank? %>
              <li><a href="#videoTab" data-toggle="tab"><i class="icon-play"></i> Vidéo de présentation</a></li>
            <%end%>
          </ul>
        </div>
        <!-- View for tab content -->
        <div class="span10">
          <div class="well sidebar-nav custom_box">
            <div id="detailPopupContent" class="tab-content">
              <div class="tab-pane fade in active" id="detailTab">
                <%= render :partial=> "layouts/website_modal/detail_tab", :locals => { :website => @webapp } %>
              </div>
              <div class="tab-pane fade" id="commentTab">
                <!-- Commentaires -->
                <%= render  :partial=>"layouts/website_modal/comment_tab", :locals => { :comments => @webapp.comments.commented}  %>
              </div>
              <div class="tab-pane fade" id="videoTab">
                <!-- Vidéo -->
                <% if !@webapp.vimeo_id.blank? %>
                  <iframe  src="<%=vimeo_url(@webapp.vimeo_id)%>" width="100%" height="400" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                <%end%>
              </div>
            </div>
          </div><!--/.well-->
        </div>
      </div>
    </div>

  </div>
  <%  if user_signed_in? %>
    <div class="modal-footer">
      <%= link_to "Edit", edit_webapp_path(@webapp),:class=>"btn" %>
  <%= link_to "Delete", webapp_path(@webapp),:data => { :confirm => "Are you sure?" }, :method => :delete,:class=>"btn" %>
    </div> 

  <%  end %>
</div>
