<div class="hero-unit span10 offset1">


  <h2><%=@title%></h2>


  <%= form_for @webapp, :html => {:multipart => true,:class => 'full'} do |f| %>
    <%= render 'shared/error_messages' %>
    <legend>Soumettez un WebSite</legend>
    <div class="row-fluid">
      <div class="offset4 span12">
        <div class="field">
          <%= f.label :titre %>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :legende %>
          <%= f.text_field :caption %>
        </div>
        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, :size=> "90x12" %>
        </div>
        <div class="field">
          <%= f.label :url, "URL" %>
          <%= f.text_field :url %>
        </div>

         <div class="field">
    
          <%= f.file_field :photo %>
        </div>


        <div class="actions">
          <%= f.submit "Ajout" %>
        </div>
      </div>

    <% end %>

  </div>

</div>