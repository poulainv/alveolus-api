<%#
## Website preview for display on home
%>

<div class="thumbnail" style="height:190px;width:96%;">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span7">
        <%= link_to image_tag(website.photo.url(:small), :style=>"margin-left:-15%;",:class =>"img", :size=>"240x100",:alt => "image site") , "#", :class=>"websiteTitle" , :data=>{:toggle=>"modal"}, :websiteId=>website.id%>

      </div>
      <div class="span5">
        <div class="row-fluid">
          <div class="span12">
            <a class="websiteTitle" websiteId="<%= website.id %>" href="" data-toggle="modal"> <%=display_title(website.title,true)%></a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12">
            <%=  render :partial => "shared/star_rating", :locals => { :n => website.average_rate }%>
          </div>
         
        </div>
      </div>

    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <small style="font-size: 14px"> <%= tronc_caption website.caption %> </small>
    </div>
  </div>
  <div class="row-fluid" style="margin-bottom:0%;">
    <div class="span12">

      <div class=" icon-tag" style="margin-top:2%;"></div>
      <span class="label-tag small"> <%= link_to website.tags[0].name, tag_webapps_path(website.tags[0]) if website.tags[0] != nil %></span>
      <span class="label-tag small"> <%= link_to website.tags[1].name, tag_webapps_path(website.tags[1]) if website.tags[0] != nil %></span>
       <%if !website.vimeo_id.blank?%>
      <div class="icon-video" title="Vidéo de présentation disponible" style="margin-top:2%;">  <i class="icon-camera"></i></div>
      <%end%>
    </div>
  </div>
</div>