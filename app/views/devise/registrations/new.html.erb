<h2>Inscription</h2>

<div class="container-fluid">

  <div class="span5">
    <h2><small>Créer vos propres identifiants...</small></h2>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group">
        <label class="control-label" for="user[email]">Email</label>
        <div class="controls">
          <%= f.email_field :email %>
          <span class="help-inline " style="display:none">Doit être une adresse mail</span>
</div>
      </div>

      <div class="control-group">
        <label class="control-label" for="user[password]">Password</label>
        <div class="controls">
          <%= f.password_field :password %>
          <span class="help-inline " style="display:none">Au moins 6 caractères</span>
</div>
      </div>

      <div class="control-group">
        <label class="control-label" for="user[password_confirmation]">Confirmation password</label>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
         <span class="help-inline " style="display:none">Doit être identique au password</span>
</div>
       
      </div>

      <div><%= f.submit "Sign up" %></div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="span7">
    <h2><small>...ou utiliser l'un de vos comptes existants parmi les services suivants :</small></h2>

    <a href="/auth/facebook" class="auth_provider">
      <%= image_tag "/img/facebook_128.png", :size => "128x128", :alt => "Facebook" %>
      Facebook
    </a>
    <a href="/auth/facebook" class="auth_provider">
      <%= image_tag "/img/google_128.png", :size => "128x128", :alt => "Google" %>
      Google
    </a>
    <a href="/auth/facebook" class="auth_provider" >
      <%= image_tag "/img/twitter_128.png", :size => "128x128", :alt => "Twitter" %>
      Twitter
    </a>
  </div>

</div>
